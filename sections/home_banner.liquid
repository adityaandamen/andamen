                      </div> 
                     </div>
                     <a href="{{url}}" target="{{open_link}}" class="pa t__0 l__0 b__0 r__0{% if url == blank %} pe_none{% endif %}"></a>
                   </div>
                </div>
             {%- else %}{% assign url = bk_stts.link_img1 %}{% assign open_link = bk_stts.open_link -%}
                <div id="nt_{{block.id}}" class="2 col-12 slideshow__slide has_video" data-id="{{block.id}}"> 
                   {%- if admin_sp %}<div {{ block.shopify_attributes }}></div>{% for block2 in se_blocks offset:index2 %}{% assign index2 = index2|plus:1 %}<div {{ block2.shopify_attributes }}></div>{% endfor %}{% endif -%}
                   <div class="oh pr nt_img_txt">
    
                    <div class="js_full_ht4 vid_slider_block img_slider_block vid_ratio vid_ratio_{{bk_stts.vid_ratio}}"></div>
    
                    {%- if image != blank -%}{%- assign ratio = image.aspect_ratio -%}{%- assign image_mb = bk_stts.image_mb |default:image -%}{%- assign ratio_mb = image_mb.aspect_ratio -%}
                      <div class="dek_img_slide nt_bg_lz lazyload item__position {{bk_stts.pos_img}} img_{{bk_stts.ani_img}} pa l__0 t__0 r__0 b__0" data-bgset="{{ image | img_url: '1x1' }}" data-ratio="{{ratio}}" data-sizes="auto"></div>
                      <div class="mb_img_slide nt_bg_lz lazyload item__position {{bk_stts.pos_img}} img_{{bk_stts.ani_img}} pa l__0 t__0 r__0 b__0" data-bgset="{{ image_mb | img_url: '1x1' }}" data-ratio="{{ratio_mb}}" data-sizes="auto"></div>
                    {%- endif -%}
                     <video id="video_{{block.id}}" class="vid_nt pa t__0 l__0 op__0 vid_bg lazyload" preload="none" data-poster="poster.jpg" playsinline data-autoplay muted loop>
                        <source src="{% if bk_stts.file_name != blank %}{{ bk_stts.file_name | file_url }}{% else %}https://cdn.shopify.com/s/files/1/0259/8538/4520/files/video_ex.mp4?14086{% endif %}" type="video/mp4">
                     </video>
                     <div class="pa t__0 l__0 b__0 r__0 flex column tc fl_center pe_none btn_video_ef">
                       <button type="button" class="flex fl_center al_center video-control__play"><svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-play" viewBox="0 0 20 40"><path fill-rule="evenodd" clip-rule="evenodd" d="M23.6 16.8L7 1.5C5.6.3 4 .2 2.9.7 1.6 1.4.8 2.7.7 3.8v31.7c0 1.8 1.1 3.3 3.1 3.3 1.5 0 2.5-.5 3.4-1.4l16.4-15.7c1.5-1.4 1.5-3.6 0-4.9z"></path></svg></button>
                     </div>
    
                     <div class="caption-wrap caption-w-{{bk_stts.caption_w}} pe_none z_100 {{bk_stts.txt_align}} {{bk_stts.txt_align_mb}}">
                      <div class="pa_txts mb_h_pos{{bk_stts.cap_h_pos_mb}} mb_v_pos{{bk_stts.cap_v_pos_mb}} h_pos{{bk_stts.cap_h_pos}} v_pos{{bk_stts.cap_v_pos}} caption">
                         <div class="{{bk_stts.ani_txt}}">
                            {%- for block in se_blocks offset:index -%}{%- assign index = index|plus:1 -%}{% assign bk_stts = block.settings -%}
                               <h3 id="b_{{block.id}}" class="slt4_h3 lh__1 mg__0">{{bk_stts.htitle}}2</h3>
                               {%- case block.type -%}
                                  {%- when 'hd' -%}
                                     <h3 id="b_{{block.id}}" class="slt4_h3 lh__1 mg__0">{{bk_stts.title}}</h3>
                                  {%- when 'subhd' -%}
                                     <h4 id="b_{{block.id}}" class="slt4_h4 mg__0 lh__1 {{bk_stts.font}}{% if bk_stts.hide %} dn db_md{% endif %}">{{bk_stts.title}}</h4>
                                  {%- when 'txt' -%}
                                     <p id="b_{{block.id}}" class="slt4_p mg__0{% if bk_stts.hide %} dn db_md{% endif %}">{{bk_stts.title}}</p> 
                                  {%- when 'btn' -%}
                                     {%- if bk_stts.btn_link != blank and bk_stts.title -%}<a id="b_{{block.id}}" class="slt4_btn button pe_auto round_{{bk_stts.btn_round}} btn_icon_{{bk_stts.btn_icon}}" href="{{bk_stts.btn_link}}" target="{{open_link}}">{{bk_stts.title}}</a>{%- endif -%}
                                     {%- if bk_stts.btn_link2 != blank and bk_stts.title2 -%}<a id="b_{{block.id}}" class="slt4_btn button pe_auto btn_style_{{bk_stts.btn_style}} round_{{bk_stts.btn_round}} btn_icon_{{bk_stts.btn_icon}}" href="{{bk_stts.btn_link2}}" target="{{open_link}}">{{bk_stts.title2}}</a>{%- endif -%}
                                  {%- when '4' -%}<div id="b_{{block.id}}" class="space_banner" {{ block.shopify_attributes }}></div>
                                  {%- when 'html' -%}
                                     <div id="b_{{block.id}}" class="slt4_html">{{bk_stts.html}}</div>
                                  {%- when 'space' -%}
                                     <div id="b_{{block.id}}" class="slt4_space"></div>
                                  {%- else -%}{%- break -%}
                               {%- endcase -%}
                            {%- endfor -%}
                         </div>
                      </div> 
                     </div>
                     <a href="{{url}}" target="{{open_link}}" class="pa t__0 l__0 b__0 r__0{% if url == blank %} pe_none{% endif %}"></a>
                   </div>
                </div>
             {%- endif -%} 
          {%- endif -%}   
        {%- endif -%}
      
    
     {%- endfor -%}

    
  </div>
</div>

  {%- render 'section_css' -%}
  
