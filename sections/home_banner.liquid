                            <div class="spot"></div>
                            <div class="hot_spot_data spot2_data">
                              <div class="hot_spot_title">{{bk_stts.hotspot2_title}}</div>
                              <div class="hot_spot_price">₹{{bk_stts.hotspot2_price}}</div>
