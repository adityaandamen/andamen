                    {%- if image != blank -%}{%- assign ratio = image.aspect_ratio -%}{%- assign image_mb = bk_stts.image_mb |default:image -%}{%- assign ratio_mb = image_mb.aspect_ratio -%}
                      <div class="js_full_ht4 img_slider_block dek_img_slide">
