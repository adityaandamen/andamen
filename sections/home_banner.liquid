<script>



function eventPromotionClick(id,creative,position,bannerType)
{
  var banner_name=bannerType;
  dataLayer.push({
  'event':'promotionClick',
  	'ecommerce':{
  		'promoClick':{
  		'promotions':[{'id':id,'name':banner_name,'creative':creative,'position':position}]
  		}
  	}
  });
}

