                                  {%- when 'txt' -%}
                                     <p id="b_{{block.id}}" class="slt4_p mg__0{% if bk_stts.hide %} dn db_md{% endif %}">{{bk_stts.title}}</p> 
                                  {%- when '4' -%}<div id="b_{{block.id}}" class="space_banner dib"></div>
                                  {%- when 'btn' -%}
                                     {%- if bk_stts.btn_link != blank and bk_stts.title != blank -%}<a id="b_{{block.id}}" class="slt4_btn button pe_auto round_{{bk_stts.btn_round}} btn_icon_{{bk_stts.btn_icon}}" href="{{bk_stts.btn_link}}" target="{{open_link}}" onclick="eventPromotionClick('HOME_BANNER_{{ bk_title | replace: " " , "_"}}','{{ bk_title | replace: " " , "_"}}','banner_slot_{{index | divided_by: 6}}','Home Page Banner')">{{bk_stts.title}}</a>{%- endif -%}
                                     {%- if bk_stts.btn_link2 != blank and bk_stts.title2 != blank -%}<a id="b_{{block.id}}" class="slt4_btn button pe_auto btn_style_{{bk_stts.btn_style}} round_{{bk_stts.btn_round}} btn_icon_{{bk_stts.btn_icon}}" href="{{bk_stts.btn_link2}}" target="{{open_link}}">{{bk_stts.title2}}</a>{%- endif -%}
                                  {%- when 'html' -%}
