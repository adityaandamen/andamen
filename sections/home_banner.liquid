     {%- for block in arr_blocks_img -%}{% assign bk_stts = block.settings -%}

        {% assign logo_url = block.settings.logo | img_url: '' -%} 

      
        {%- if currentDate > bk_stts.launch -%}
          {%- if currentDate < bk_stts.end -%}
            {% assign bk_title = block.settings.title -%}
             {%- if block.type == 'img' -%}{%- assign image = bk_stts.image %}{% assign url = bk_stts.link_img1 %}{% assign open_link = bk_stts.open_link %}{% assign forloop_first = forloop.first %}{% assign ani_img = bk_stts.ani_img -%}
