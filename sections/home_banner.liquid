                            {%- if bk_stts.btn_link2 != blank and bk_stts.btitle2 != blank -%}<a id="b_{{block.id}}" class="slt4_btn button pe_auto btn_style_{{bk_stts.btn_style}} round_{{bk_stts.btn_round}} btn_icon_{{bk_stts.btn_icon}}" href="{{bk_stts.btn_link2}}" target="{{open_link}}">{{bk_stts.btitle2}}</a>{%- endif -%}
                            
               
                            {%- for block in se_blocks offset:index -%}{%- assign index = index|plus:1 -%}{% assign bk_stts = block.settings -%}
                               
