                      <div class="js_full_ht4 img_slider_block mb_img_slide">
                         <div class="bg_rp_norepeat bg_sz_cover lazyload item__position {{bk_stts.pos_img}} img_{{ani_img}} pa l__0 t__0 r__0 b__0" data-bgset="{{ image_mb | img_url: '1x1' }}" data-ratio="{{ratio_mb}}" data-sizes="auto"></div>
