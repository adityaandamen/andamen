<div class="tabs nt_se_{{section.id}} {{section.settings.layout}}">
  <div class="tab">
    <input type="checkbox" id="chck1">
    <label class="tab-label" for="chck1">Returns & Exchanges</label>
    <div class="tab-content">
      {{ section.settings.code }}
    </div>
  </div>
</div>


{%- render 'section_css' -%}
